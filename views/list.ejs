<!-- Anything valid on html will be valid on ejs -->

<%# To add external ejs pages for layout and repetition %>
<%- include("header") -%> 
    <%# Take our logic from app.js and paste into d h1 %>  
    <%# Add a marker to tell where to place a variable %> 

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">    
        <% newListItems.forEach(item=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" type="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p> <%= item.name %>  </p>
                </div>

                <input type="hidden" name="listName" value=" <%= listTitle %>  ">
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value= <%= listTitle %>  >+</button>
        </form>
    </div>

<%- include("footer") -%> 
    
    
    
